<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        //위 레이아웃에 drawable 로 테두리 동글게 설정하면됨

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20sp">


            <TextView
                android:id="@+id/bus_station_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장기역.김포고용복지플러스센터"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bus_to_station_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="은혜와진리교회방면"
                app:layout_constraintStart_toStartOf="@+id/bus_station_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/bus_station_name_tv" />

            <ImageButton
                android:id="@+id/bus_bookmark_ibtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/transparent"
                android:src="@drawable/ic_baseline_star_24"
                app:tint="@color/favoriteTint" />
<!--            app:layout_constraintRight_toLeftOf="@id/bus_station_info_ibtn"-->
<!--            <ImageButton-->
<!--                android:id="@+id/bus_station_info_ibtn"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="5dp"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:srcCompat="@drawable/ic_baseline_directions_bus_24" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/bus_info_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/teal_200"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bus1_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:text="70"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/bus_info_ly"
                    app:layout_constraintStart_toStartOf="@+id/bus_info_ly"/>
                <TextView
                    android:id="@+id/bus1_fastTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:text="00분00초"/>
                <TextView
                    android:id="@+id/bus1_nextTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:text="10분10초"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/bus3_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:text="70"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/bus_info_ly"
                    app:layout_constraintStart_toStartOf="@+id/bus_info_ly"/>
                <TextView
                    android:id="@+id/bus3_fastTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:text="00분00초"/>
                <TextView
                    android:id="@+id/bus3_nextTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:text="10분10초"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/bus2_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:text="70"
                    android:textSize="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/bus_info_ly"
                    app:layout_constraintStart_toStartOf="@+id/bus_info_ly"/>
                <TextView
                    android:id="@+id/bus2_fastTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:text="00분00초"/>
                <TextView
                    android:id="@+id/bus2_nextTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:text="10분10초"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>