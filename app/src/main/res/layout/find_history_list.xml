<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_list_bg"
        android:layout_width="275sp"
        android:layout_height="55sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:elevation="5sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/history_start_tv"
            android:layout_width="130sp"
            android:layout_height="20sp"
            android:layout_margin="5sp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/PersianBlue"
            android:text="@string/history_start"
            android:fontFamily="@font/fontstyle"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/history_list_bg"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/history_end_tv"
            android:layout_width="130sp"
            android:layout_height="20sp"
            android:layout_margin="5sp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:text="@string/history_end"
            android:fontFamily="@font/fontstyle"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/history_list_bg"
            app:layout_constraintLeft_toRightOf="@id/history_start_tv"/>

        <TextView
            android:id="@+id/history_pos1_tv"
            android:layout_width="130sp"
            android:layout_height="20sp"
            android:layout_margin="5sp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="부천대학교 소사캠퍼스"
            android:fontFamily="@font/fontstyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/history_start_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/history_pos2_tv"
            android:layout_width="130sp"
            android:layout_height="20sp"
            android:layout_margin="5sp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="구로역"
            android:fontFamily="@font/fontstyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/history_end_tv"
            app:layout_constraintLeft_toRightOf="@id/history_start_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>