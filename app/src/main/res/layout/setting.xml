<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:id="@+id/main_activity"
    tools:context=".Maps_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/setting_header_text"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:textAlignment="center"
            android:text="@string/setting_header_text"
            android:fontFamily="@font/fontstyle"
            android:textSize="25sp"
            android:paddingTop="10sp"
            android:background="@drawable/header_stroke"
            tools:ignore="MissingConstraints"/>

        <ImageButton
            android:id="@+id/main_menu_ibtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10sp"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="#00000000"
            android:contentDescription="@string/StringValue"
            android:src="@drawable/ic_baseline_menu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/header_stroke"
            android:fontFamily="@font/fontstyle"
            android:paddingStart="20sp"
            android:paddingTop="15sp"
            android:text="자동 새로고침 간격"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlSymmetry"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/header_stroke"
            android:fontFamily="@font/fontstyle"
            android:paddingTop="15sp"
            android:text="30초"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlSymmetry"
            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="70dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right"
            android:background="@color/transparent"
            tools:layout_editor_absoluteX="370sp"
            tools:layout_editor_absoluteY="70sp"
            tools:ignore="MissingConstraints"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/header_stroke"
            android:fontFamily="@font/fontstyle"
            android:paddingStart="20sp"
            android:paddingTop="15sp"
            android:text="계정 정보"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlSymmetry"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="120dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/header_stroke"
            android:fontFamily="@font/fontstyle"
            android:paddingTop="15sp"
            android:text="김동훈"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlSymmetry"
            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="120dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right"
            android:background="@color/transparent"
            tools:layout_editor_absoluteX="370sp"
            tools:layout_editor_absoluteY="120sp"
            tools:ignore="MissingConstraints"
            android:contentDescription="TODO" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>