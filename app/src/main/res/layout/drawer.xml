<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_main"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawer_profile_img"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="30sp"
            android:src="@drawable/image_profile" />

        <TextView
            android:id="@+id/drawer_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140sp"
            android:text="김동훈"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/drawer_weather_img"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="170sp"
            android:src="@drawable/sunny" />

        <TextView
            android:id="@+id/drawer_tem_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118sp"
            android:layout_marginTop="195sp"
            android:text="20°C"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/drawer_area_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118sp"
            android:layout_marginTop="225sp"
            android:text="부천시"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="260sp"
            android:text="미세먼지"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130sp"
            android:layout_marginTop="260sp"
            android:text="초미세먼지"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/drawer_fine_text"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="254sp"
            android:text="●"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/drawer_ultra_text"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginLeft="188sp"
            android:layout_marginTop="254sp"
            android:text="●"
            android:textAlignment="center"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>