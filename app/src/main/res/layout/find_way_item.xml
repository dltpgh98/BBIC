<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/find_way_itemBackground_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beige_radious"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/find_way_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/find_way_on_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="도보: 00 분"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/find_way_item_layout"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"/>
            <ImageView
                android:id="@+id/find_way_itemTransit_firstIv_iv"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintStart_toEndOf="@id/find_way_on_foot"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"/>
            <TextView
                android:id="@+id/find_way_busOrSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/find_way_item_layout"
                app:layout_constraintStart_toEndOf="@id/find_way_itemTransit_firstIv_iv"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"/>
            <ImageView
                android:id="@+id/find_way_itemTransit_twoIv_iv"
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:layout_constraintStart_toEndOf="@id/find_way_busOrSub"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"/>
            <TextView
                android:id="@+id/find_way_subOrBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="**"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/find_way_item_layout"
                app:layout_constraintStart_toEndOf="@id/find_way_itemTransit_twoIv_iv"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소요시간: "
                app:layout_constraintEnd_toStartOf="@id/find_way_itemTime_tv"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"
                app:layout_constraintTop_toTopOf="@id/find_way_item_layout"/>
            <TextView
                android:id="@+id/find_way_itemTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅁㅁ분"
                android:layout_marginEnd="3dp"
                app:layout_constraintEnd_toStartOf="@id/find_way_itemExpansion_iv"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"
                app:layout_constraintTop_toTopOf="@id/find_way_item_layout"/>
            <ImageView
                android:id="@+id/find_way_itemExpansion_iv"
                android:layout_width="20dp"
                android:layout_height="20sp"
                android:layout_marginEnd="3dp"
                app:layout_constraintEnd_toEndOf="@id/find_way_item_layout"
                app:layout_constraintBottom_toBottomOf="@id/find_way_item_layout"
                app:layout_constraintTop_toTopOf="@id/find_way_item_layout"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>