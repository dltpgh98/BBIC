<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subway_top_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/layout_radious"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/subway_this_station_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지하철 당역명"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageButton
            android:id="@+id/subway_bookmark_ibtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/subway_left_station_direction_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/subway_this_station_name_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/subway_left_station_direction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상행 방면"
            app:layout_constraintTop_toBottomOf="@id/subway_this_station_name_tv"
            app:layout_constraintStart_toEndOf="@id/subway_left_station_direction_image_tv"
            />

        <TextView
            android:id="@+id/subway_right_station_direction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하행 방면"
            app:layout_constraintTop_toBottomOf="@id/subway_this_station_name_tv"
            app:layout_constraintEnd_toStartOf="@id/subway_right_station_direction_image_tv"/>
        <TextView
            android:id="@+id/subway_right_station_direction_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@id/subway_this_station_name_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>