<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TableLayout
        android:id="@+id/schedule_pen_top_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ff000000">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="1sp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/promise_write_close_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/fontstyle"
                android:text="취소"
                android:textColor="#afff0000"
                android:textSize="18sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/schedule_pen_save_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/fontstyle"
                android:text="저장"
                android:textColor="#ff00a0ff"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        app:layout_constraintTop_toTopOf="@+id/wp_top_view">

        <TableLayout
            android:id="@+id/promise_pen_setFrame_Table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="10dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#eeeeee"
                android:background="@drawable/radious"
                android:layout_margin="10sp"
                android:elevation="5sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <EditText
                    android:id="@+id/promise_pen_title_tv"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:fontFamily="@font/fontstyle"
                    android:hint="약속 이름"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="normal" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#eeeeee"
                android:background="@drawable/radious"
                android:layout_margin="10sp"
                android:elevation="5sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/promise_pen_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:fontFamily="@font/fontstyle"
                    android:hint="약속 시간"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#eeeeee"
                android:background="@drawable/radious"
                android:layout_margin="10sp"
                android:elevation="5sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/promise_pen_member_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:fontFamily="@font/fontstyle"
                    android:hint="약속 친구"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/image_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_control_point" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#eeeeee"
                android:background="@drawable/radious"
                android:layout_margin="10sp"
                android:elevation="5sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <EditText
                    android:id="@+id/promise_pen_place_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:fontFamily="@font/fontstyle"
                    android:hint="약속 장소"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:textStyle="normal" />


            </TableRow>



        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#eeeeee"
                android:background="@drawable/radious"
                android:layout_marginHorizontal="10sp"
                android:layout_marginBottom="10sp"
                android:elevation="5sp"
                android:gravity="top">

                <EditText
                    android:id="@+id/promise_pen_txt_tv"
                    android:layout_width="395dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_vertical"
                    android:padding="10sp"
                    android:hint="내용"
                    android:maxLines="4"
                    android:maxLength="50"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:textColor="#555555"
                    android:textStyle="normal" />
            </TableRow>

        </TableLayout>


    </LinearLayout>

</FrameLayout>