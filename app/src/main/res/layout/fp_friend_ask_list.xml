<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ask_profile_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_profile" />

        <ImageView
            android:id="@+id/ask_pro_stat_iv"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@color/green"
            app:layout_constraintBottom_toBottomOf="@id/ask_profile_iv"
            app:layout_constraintEnd_toEndOf="@id/ask_profile_iv"
            />

        <TextView
            android:id="@+id/ask_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:fontFamily="@font/nanum_square_round_b"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/ask_profile_iv"
            app:layout_constraintBottom_toBottomOf="@id/ask_profile_iv"
            app:layout_constraintStart_toEndOf="@id/ask_profile_iv"/>

        <ImageView
            android:id="@+id/ask_delete_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/red_radious"
            app:srcCompat="@color/green"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ask_accept_iv"/>
        <ImageView
            android:id="@+id/ask_accept_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@color/green"
            android:background="@drawable/blue_radious"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>