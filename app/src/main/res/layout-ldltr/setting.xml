<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:id="@+id/main_activity"
    tools:context=".Setting_Activity"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/setting_header_text"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:textAlignment="center"
                android:text="@string/setting_header_text"
                android:fontFamily="@font/fontstyle"
                android:textSize="25sp"
                android:paddingTop="20sp"
                android:background="@drawable/header_stroke"
                app:layout_constraintTop_toTopOf="parent"/>

            
            <ImageButton
                android:id="@+id/menu_ibtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="#00000000"
                android:contentDescription="@string/StringValue"
                android:src="@drawable/ic_baseline_menu"
                app:layout_constraintTop_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_margin="10sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_menu_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/header_stroke"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="20sp"
                android:paddingTop="12sp"
                android:text="이용약관"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/setting_terms_button"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right"
                android:background="@color/transparent"
                android:layout_marginEnd="10sp"
                android:contentDescription="TODO"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_menu_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_menu_3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/header_stroke"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="20sp"
                android:paddingTop="12sp"
                android:text="개인정보 처리방침"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/setting_personal_btn"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right"
                android:background="@color/transparent"
                android:layout_marginEnd="10sp"
                android:contentDescription="TODO"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/setting_margin_2"
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:background="#CCCCCC"
            android:fontFamily="@font/fontstyle"
            android:paddingStart="20sp"
            android:paddingTop="12sp"
            android:text=""
            android:textColor="#AAAAAA"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/setting_menu_4"/>

        <TextView
            android:id="@+id/setting_sub_2"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/header_stroke"
            android:fontFamily="@font/fontstyle"
            android:paddingStart="20sp"
            android:paddingTop="12sp"
            android:text="그 외"
            android:textColor="#AAAAAA"
            android:textAlignment="viewStart"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/setting_margin_2"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_menu_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_sub_2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/header_stroke"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="20sp"
                android:paddingTop="12sp"
                android:text="도움말"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/setting_help_btn"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right"
                android:background="@color/transparent"
                android:layout_marginEnd="10sp"
                android:contentDescription="TODO"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_menu_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_menu_6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/header_stroke"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="20sp"
                android:paddingTop="12sp"
                android:text="제작자에게 후원하기"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/setting_spons_btn"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right"
                android:background="@color/transparent"
                android:layout_marginEnd="10sp"
                android:contentDescription="TODO"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>